<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#22BED1"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="18sp"
    android:layout_marginVertical="12sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        >
        <TextView
            android:id="@+id/editTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agbalumo"
            android:textColor="#F8F3F7"
            android:text="ami kal home work joma debo "
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"


            />

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agbalumo"
            android:text="20/09/2024"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="#9C3F3F"
           />




        <TextView
            android:id="@+id/timeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agbalumo"
            android:text="12:00"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="#AF3535"
            />



    </LinearLayout>



</androidx.cardview.widget.CardView>